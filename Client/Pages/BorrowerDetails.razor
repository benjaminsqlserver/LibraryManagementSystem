@page "/borrower-details"
@attribute [Authorize]

<PageTitle>BorrowerDetails</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="BorrowerDetails" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenSplitButton Icon="get_app" style="margin-left: 10px; margin-bottom: 10px" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
        <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
        <RadzenSplitButtonItem Text="CSV" Value="csv" />
    </RadzenSplitButton>
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12">
        <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@borrowerDetails" Count=count LoadData=@Grid0LoadData  TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" RowDoubleClick="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Property="ID" Title="ID">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Property="BorrowedFrom" Title="BorrowedFrom">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Property="BorrowedTo" Title="BorrowedTo">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Property="ActualReturnDate" Title="ActualReturnDate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Property="BookDetail.ISBN" Title="BookDetail">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Property="LibraryClient.FirstName" Title="LibraryClient">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Property="LibraryEmployee.FirstName" Title="LibraryEmployee">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="LibraryManagementSystem.Server.Models.MyLibraryDB.BorrowerDetail" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="borrowerDetail">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, borrowerDetail)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
